<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>

        <variable
            name="onclick"
            type="com.dana.puzzle.tool.OnClickListner" />

    </data>
    <FrameLayout
    android:orientation="vertical"
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">



        <include
            android:id="@+id/game_layout"
            layout="@layout/game_place_layout"/>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
            android:onClick="@{(v) ->onclick.onClick(v)}"
            android:id="@+id/iv_qlue"
            android:src="@drawable/ic_qlue"
            android:padding="4dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:ignore="ContentDescription" />


        <include layout="@layout/vertical_divider_small"/>

        <ImageView
            android:onClick="@{(v) ->onclick.onClick(v)}"
            android:id="@+id/iv_shuffle"
            android:src="@drawable/ic_shuffle"
            android:padding="4dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:ignore="ContentDescription" />

        <include layout="@layout/vertical_divider_small"/>


        <ImageView
            android:onClick="@{(v) ->onclick.onClick(v)}"
            android:id="@+id/iv_preview"
            android:src="@drawable/ic_visible"
            android:padding="4dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:ignore="ContentDescription" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <include
                android:id="@+id/ly_game_time"
                layout="@layout/game_timer_layout"/>

            <ImageView
                android:onClick="@{(v) ->onclick.onClick(v)}"
                android:id="@+id/iv_menu"
                android:padding="4dp"
                android:src="@drawable/ic_menu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                tools:ignore="ContentDescription" />


        </LinearLayout>





    <include
        bind:onclick="@{onclick}"
        android:id="@+id/menu_layout"
        layout="@layout/menu_layout"/>



</FrameLayout>

</layout>


